<Page
    x:Class="CalendarProject.Views.WeekPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:CalendarProject.UserControls">

    <Grid x:Name="ContentArea">
        <!-- Горизонтальная прокрутка -->
        <ScrollViewer HorizontalScrollMode="Auto" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30" Spacing="12" Padding="12">
                <!-- Карточки дней недели -->
                <local:DayCardControl DayName="Monday"/>
                <local:DayCardControl DayName="Tuesday"/>
                <local:DayCardControl DayName="Wednesday"/>
                <local:DayCardControl DayName="Thursday"/>
                <local:DayCardControl DayName="Friday"/>
                <local:DayCardControl DayName="Saturday"/>
                <local:DayCardControl DayName="Sunday"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
