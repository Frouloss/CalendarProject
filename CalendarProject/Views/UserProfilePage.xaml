<Page
    x:Class="CalendarProject.Views.UserProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:CalendarProject.Views" 
    xmlns:loc="using:CalendarProject.UserControls">

    <Page.Resources>
        <BitmapImage x:Key="DefaultAvatar" UriSource="ms-appx:///Assets/DefaultAvatar.jpg" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Padding="10">
            <!-- Основная сетка страницы с 2 строками -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопки сохранения и выхода -->
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,10,0,10" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300">
                <!-- Аватарка -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                    <TextBlock Text="Avatar:" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <loc:AvatarControl x:Name="UserAvatar" Size="100" ImageSource="{StaticResource DefaultAvatar}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,10" VerticalAlignment="Top" HorizontalAlignment="Center" Width="250">
                <Button Content="Change Avatar" Width="200" Height="50" Margin="10" Click="ChangeAvatarButton_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="0,10,0,10" VerticalAlignment="Top" HorizontalAlignment="Center" Width="250">
                <!-- Имя пользователя -->
                <TextBlock Text="Name:" FontSize="18" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox x:Name="UserNameTextBox" PlaceholderText="Enter name" Margin="0,5,0,10"/>

                <!-- Email -->
                <TextBlock Text="Email:" FontSize="18" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox x:Name="UserEmailTextBox" PlaceholderText="Enter email" Margin="0,5,0,10"/>

                <!-- Пароль -->
                <TextBlock Text="Password:" FontSize="18" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox x:Name="UserPasswordTextBox" PlaceholderText="Enter password" Margin="0,5,0,10"/>

                <!-- AutoLogin -->
                <CheckBox x:Name="AutoLoginCheckBox" Content="AutoLogin" Width="150" Checked="AutoLoginCheckBox_Checked" Unchecked="AutoLoginCheckBox_Unchecked" Margin="0,10,0,20"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
                <Button Content="Save" Width="150" Height="50" Margin="10" Click="SaveButton_Click"/>
                <Button Content="Log out" Width="150" Height="50" Margin="10" Click="LogoutButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
