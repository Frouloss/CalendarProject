<UserControl
    x:Class="CalendarProject.UserControls.TaskControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Padding="4"
    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
    BorderThickness="0.5"
    CornerRadius="4"
    Background="{ThemeResource ControlFillColorSecondary}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="{x:Bind TaskTime}" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
        <TextBlock Text="{x:Bind TaskDescription}" Grid.Column="1" VerticalAlignment="Center" Margin="4"/>
    </Grid>
</UserControl>